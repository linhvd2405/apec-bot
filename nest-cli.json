{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": ["@nestjs/swagger"],
    "assets": [
      { 
        "include": "languages/**/*", 
        "outDir": "dist/src" 
      },
      { 
        "include": "public/**", 
        "outDir": "dist/src" 
      }
    ],
    "webpack": false,
    "deleteOutDir": true,
    "watchAssets": true
  }
}